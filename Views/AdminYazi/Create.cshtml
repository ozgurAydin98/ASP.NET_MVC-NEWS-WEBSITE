@model darkZencefil.Models.Yazi
@{
    ViewBag.Title = "Oluşturma";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}



<h2>Yazı Oluştur</h2>
@using (Html.BeginForm("Create", "AdminYazi", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
       <br />
        <br />
        <br />
         <h4>Yazi</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <div class="control-label col-md-12">Kategori</div>
            @*@Html.LabelFor(model => model.KategoriID, "KategoriID", htmlAttributes: new { @class = "control-label col-md-2" })*@
            <div class="col-md-10">
                @Html.DropDownList("KategoriID", (SelectList)ViewBag.KategoriID, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.KategoriID, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @*@Html.LabelFor(model => model.Baslik, htmlAttributes: new { @class = "control-label col-md-2" })*@
            <div class="control-label col-md-12">Başlık(max 50 harf)</div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Baslik, new { htmlAttributes = new { @class = "form-control" } })

                @Html.ValidationMessageFor(model => model.Baslik, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="control-label col-md-12">Metin</div>
            @*@Html.LabelFor(model => model.Metin, htmlAttributes: new { @class = "control-label col-md-2" })*@
            <div class="col-md-10">
                @Html.EditorFor(model => model.Metin, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Metin, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="control-label col-md-12">Fotoğraf</div>
            @*@Html.LabelFor(model => model.Foto, htmlAttributes: new { @class = "control-label col-md-2" })*@
            <div class="col-md-10">
                <input type="file" name="Foto" id="Foto" accept=".png,.PNG,.jpeg,.JPEG,.jpg,.JPG" class="form-control" />
                @Html.ValidationMessageFor(model => model.Foto, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="control-label col-md-12">Tarih)</div>
            @*@Html.LabelFor(model => model.Tarih, htmlAttributes: new { @class = "control-label col-md-2" })*@
            <div class="col-md-10">
                @Html.EditorFor(model => model.Tarih, new { htmlAttributes = new { @class = "form-control", @type = "date" } })
                @Html.ValidationMessageFor(model => model.Tarih, "", new { @class = "text-danger" })

            </div>
        </div>

        @*<div class="form-group">
                @Html.LabelFor(model => model.UyeID, "UyeID", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("UyeID", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.UyeID, "", new { @class = "text-danger" })
                </div>
            </div>*@
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">


                <input type="submit" value="OLUŞTUR" class="btn btn-default" />

            </div>
        </div>
    </div>
}
<div>
    @Html.ActionLink("Geri dön", "Index")
</div>
