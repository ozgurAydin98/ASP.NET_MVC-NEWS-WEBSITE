@model IEnumerable<darkZencefil.Models.Yazi>
@{

    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="col-md-12">
    <br />
    <br />
    <br />
    <h2> Arama sonuçları</h2>
    <table class="table">
        <tr>
            <th>         
                <h6>Kategori</h6>
            </th>
            <th> 
                <h6>Editör</h6>
            </th>
            <th>       
                <h6>Başlık</h6>
            </th>
            <th>          
                <h6>Fotoğraf</h6>
            </th>
            <th>            
                <h6>Tarih</h6>
            </th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Kategori.KategoriAdi)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Uye.KullaniciAdi)
                </td>
                <td>
                    <a href="/site/haberDetay/@item.YaziID">@Html.DisplayFor(modelItem => item.Baslik)</a>
                </td>

                <td>
                    <img class="img-rounded img-responsive" width="75" src="@item.Foto" alt="@item.Baslik" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tarih)
                </td>
            </tr>
        }
    </table>
</div>